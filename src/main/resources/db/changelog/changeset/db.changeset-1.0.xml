<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="db/changelog/changeset/db.changeset-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="Rostislav Dolbilov">
        <createTable tableName="products">
            <column type="BIGINT" autoIncrement="true" name="identifier">
                <constraints primaryKey="true"/>
            </column>

            <column type="VARCHAR(50)" name="product_type">
                <constraints nullable="false"/>
            </column>

            <column type="VARCHAR(50)" name="series_number">
                <constraints nullable="false" unique="true"/>
            </column>

            <column type="VARCHAR(50)" name="manufacturer">
                <constraints nullable="false"/>
            </column>

            <column type="INT" name="quantity">
                <constraints nullable="false"/>
            </column>

            <column type="VARCHAR(200)" name="addition_settings">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
